@media (max-width: 1071px)
	.info
		&__title-icon svg
			height: 12px

@media (max-width: 1024px)
	.info
		&__title
			font-size: 30px
			
		&__subtitle
			font-size: 15px

@media (max-width: 768px)
	.info
		&__subtitle
			width: 100%
			font-size: 20px
			margin-bottom: 20px

@media (max-width: 320px)
	.info
		&__title
			font-size: 27px

		&__subtitle
			font-size: 16px
