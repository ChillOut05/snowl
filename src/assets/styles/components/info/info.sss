.info
	&
		margin-top: -5px

	&__title
		font-size: 3vw
		display: block
		color: $font-color
		transition: .2s
		margin-bottom: 5%

	&__title-icon
		position: relative
		top: 0
		left: 7px

	&__title-icon svg
		height: 1vw
		fill: $font-color
		transition: .2s

	&__subtitle
		font-size: 1.4vw
		line-height: 1.2
		color: rgba($font-color, .4)
		width: 80%
		margin-bottom: 6%
