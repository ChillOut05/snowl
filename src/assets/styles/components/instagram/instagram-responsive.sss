@media (max-width: 640px)
	.instagram
		&
			width: 79.5%
			height: 100%
			flex-direction: row

		&__item_col-6
			width: 50%
			height: 37.5vw

		&__item_col-3
			width: 100%
			height: 37.5vw

		&__item_col-3-1
			width: 100%
			height: 100%

		&__wrap
			width: 100%
			height: 50%

		&__link
			font-size: 40px

		&__link_instagram svg
			width: 48px
			height: 48px

		&__link_tr-arrow svg
			width: 23px
			height: 23px
