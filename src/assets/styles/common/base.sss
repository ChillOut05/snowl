html
body,
	height: 100%

body
	font-family: $ff_OS
	font-size: 14px
	line-height: 1.4

body,
input,
button,
textarea
	font-family: $ff_OS

input,
button,
textarea
	@mixin reset-input

button
	cursor: pointer
	&::-moz-focus-inner
		border: 0
		padding: 0

a
	text-decoration: none

em
i
	font-style: italic

b
strong
	font-weight: bold
